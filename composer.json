{
    "name": "sevaske/payfort",
    "description": "Laravel plugin that simplifies integration with the Payfort Payment API, allowing developers to manage multiple merchants and configurations with ease, supporting Laravel 9+ for secure and flexible payment processing.",
    "keywords": [
        "laravel",
        "payfort",
        "payment",
        "payment gateway",
        "api",
        "plugin",
        "e-commerce",
        "php",
        "online payments",
        "laravel package",
        "apple pay"
    ],
    "homepage": "https://github.com/sevaske/payfort",
    "license": "MIT",
    "authors": [
        {
            "name": "Sevak Mnatcakanian",
            "email": "sevachello@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.9",
        "illuminate/contracts": "^9.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "laravel/pint": "^1.17",
        "nunomaduro/collision": "^7.10",
        "orchestra/testbench": "^7.32"
    },
    "autoload": {
        "psr-4": {
            "Sevaske\\Payfort\\": "src/"
        }
    },
    "scripts": {
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sevaske\\Payfort\\PayfortServiceProvider"
            ],
            "aliases": {
                "Payfort": "Sevaske\\Payfort\\Facades\\Payfort"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
